<div class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
        <div class="glass-effect rounded-2xl p-8 border border-white/30 text-center">
            <div class="w-16 h-16 bg-red-100 rounded-xl flex items-center justify-center mx-auto mb-6">
                <i class="fas fa-exclamation-triangle text-red-500 text-2xl"></i>
            </div>
            <h1 class="text-3xl font-bold text-gray-900 mb-3">Oops! Something went wrong</h1>
            <p class="text-gray-600 mb-8"><%= error %></p>
            <div class="space-y-3">
                <a href="/" class="btn-primary w-full text-white px-6 py-3 rounded-xl text-sm font-semibold inline-flex items-center justify-center">
                    <i class="fas fa-home mr-2"></i>
                    Go Home
                </a>
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/dashboard" class="w-full text-gray-600 hover:text-gray-800 px-6 py-3 rounded-xl text-sm font-medium inline-flex items-center justify-center border border-gray-200 hover:border-gray-300 transition-colors">
                        <i class="fas fa-tachometer-alt mr-2"></i>
                        Back to Dashboard
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</div> 